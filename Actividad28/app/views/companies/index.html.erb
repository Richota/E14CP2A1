<p id="notice"><%= notice %></p>

<h1>Index Compañia</h1>

<table class="table">
  <thead>
    <tr>
      <th><h4>Nombre Compañía</h4></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><h5><%= link_to company.name, company %></h5> </td>
        <td><%= link_to 'Edit', edit_company_path(company), class: 'btn btn-info' %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Está seguro que desea eliminar?' }, class: 'btn btn-primary' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h4><%= link_to 'Nueva Compañia', new_company_path %></h4>
