<h2>Agregar nuevo empleado</h2>
<%= form_with(model: [ @company, @employee ], local: true) do |form| %>
  <div class="form-group">
    <%= form.label :first_name %>
    <%= form.text_field :first_name %>
  </div>
  <div class="form-group">
    <%= form.label :last_name %>
    <%= form.text_field :last_name %>
  </div>
  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>
  <div class="form-group">
    <%= fields_for :area do |area_field| %>
      <%= form.label :area %>
      <%= form.select :area, @areas %>
    <% end %>
  </div>
  <div class="actions">
    <%= form.submit 'Agregar', class: 'btn btn-success'%>
  </div>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Nombre</th>
      <th scope="col">Apellido</th>
      <th scope="col">email</th>
      <th scope="col">Area</th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.first_name %></td>
        <td><%= employee.last_name %></td>
        <td><%= employee.email %></td>
        <td><%= employee.area %></td>
        <td><%= link_to "despedir", company_employee_path(@company, employee),
      method: :delete, class: 'btn btn-primary btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

